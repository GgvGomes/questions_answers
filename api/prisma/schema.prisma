// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Questions {
  id          String   @id @default(cuid())
  question    String
  viewed      Boolean  @default(false)
  data        DateTime @default(now())
  transmitter String?
  reciverId   String
  reciver     Recivers @relation(fields: [reciverId], references: [id])
}

model Recivers {
  id        String      @id @default(cuid())
  name      String
  Questions Questions[]
}
